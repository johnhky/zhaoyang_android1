<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.im.TextMsg" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.MessageAdapter" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15">


        <FrameLayout
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/nim_message_right_blue_bg"
            android:onClick="@{data.handler.fileDetail(data)}"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_54"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@{data.handler.drawableForFileType(data.userData)}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_74"
                android:layout_marginStart="@dimen/dp_74"
                android:text="@{data.body}"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_74"
                android:layout_marginStart="@dimen/dp_74"
                android:text='@{data.handler.fileSize(data.duration)}'
                android:textColor="@color/white"
                android:textSize="@dimen/font_13" />
        </FrameLayout>

        <com.doctor.sun.ui.widget.BezelImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:drawable="@{@drawable/default_avatar}"
            android:scaleType="centerCrop"
            android:src="@{adapter.myAvatar}"
            app:maskDrawable="@drawable/circle_mask" />
    </RelativeLayout>
</layout>