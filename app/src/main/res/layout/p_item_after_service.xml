<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.AfterService" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseAdapter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13">

            <com.doctor.sun.ui.widget.BezelImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:drawable="@{@drawable/default_avatar}"
                android:scaleType="centerCrop"
                android:src="@{data.doctor.avatar}"
                app:maskDrawable="@drawable/circle_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_13"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="@{data.doctor.name}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@drawable/shape_test"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:singleLine="true"
                    android:text="@{data.doctor.level}"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_13"
                android:gravity="center_vertical"
                android:text="@{data.statusLabel}"
                android:textColor="@{data.statusTextColor}"
                android:textSize="@dimen/font_13" />

        </com.zhy.android.percent.support.PercentFrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_13"
            android:background="#c1cacf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text="问卷名称: 常规随访问卷"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text='@{"最迟问卷完成时间: " + data.deadlineTime}'
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@{data.dividerColor}" />

        <LinearLayout
            android:id="@+id/lly_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="horizontal"
            android:visibility="@{data.btnVisible}">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/reject"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@drawable/btn_small_white"
                android:onClick="@{()->data.reject(adapter,vh)}"
                android:visibility="@{data.todoBtnVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="拒  绝"
                    android:textColor="#339de1"
                    android:textSize="@dimen/font_13" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/accept"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:background="@drawable/btn_small_blue"
                android:onClick="@{()->data.accept(adapter,vh)}"
                android:visibility="@{data.todoBtnVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="接  受"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_13" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:background="@drawable/btn_small_blue"
                android:onClick="@{()->data.fillForum(context,data.id)}"
                android:visibility="@{data.doingBtnVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="填写问卷"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_13" />
            </FrameLayout>

        </LinearLayout>

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:background="#ebf0f3" />
    </LinearLayout>
</layout>