<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.im.TextMsg" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.MessageAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/include_msg_time"
            bind:adapter="@{adapter}"
            bind:data="@{data}"
            bind:vh="@{vh}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/avatar"
                android:background="@drawable/nim_message_right_blue_bg"
                android:onClick="@{adapter.previewImage(data.messageStatus)}"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4">

                <com.doctor.sun.ui.widget.BezelImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@{data.messageStatus}"
                    bind:height="@{data.imageHeight}"
                    bind:maskDrawable="@drawable/shape_rect_r12"
                    bind:width="@{data.imageWidth}" />
            </LinearLayout>

            <com.doctor.sun.ui.widget.BezelImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_10"
                android:drawable="@{@drawable/default_avatar}"
                android:scaleType="centerCrop"
                android:src="@{adapter.myAvatar}"
                bind:maskDrawable="@drawable/circle_mask" />
        </RelativeLayout>
    </LinearLayout>
</layout>