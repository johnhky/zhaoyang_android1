<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Patient" />



        <variable
            name="handler"
            type="com.doctor.sun.ui.activity.patient.handler.MeHandler" />

        <variable
            name="footer"
            type="com.doctor.sun.ui.model.FooterViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/bg_me"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.doctor.sun.ui.widget.BezelImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:layout_marginTop="@dimen/dp_14"
                android:drawable="@{@drawable/default_avatar}"
                android:onClick="@{handler.info}"
                android:scaleType="centerCrop"
                android:showcase='@{"点击头像可以修改个人信息"}'
                android:showcaseId='@{"patientMe"}'
                android:showcasePosition='@{0}'
                android:showcaseSize='@{3}'
                android:src="@{data.avatar}"
                bind:maskDrawable="@drawable/circle_mask" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:singleLine="true"
                android:text="@{data.name}"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <RatingBar
                style="@style/SmallRatingBarCenter"
                android:layout_marginTop="@dimen/dp_8"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="@{data.point}" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_119"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{handler.Record}"
                android:orientation="vertical"
                android:showcase='@{"这里可以查看病历信息和新建病历"}'
                android:showcaseId='@{"patientMe"}'
                android:showcasePosition='@{2}'
                android:showcaseSize='@{3}'>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_record" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="患者管理"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c1cacf" />

            <LinearLayout
                android:id="@+id/btn_document"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{handler.Document}"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_document" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="我的收藏"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c1cacf" />

            <LinearLayout
                android:id="@+id/btn_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{()->handler.followUpDoctorList(context)}"
                android:orientation="vertical"
                android:showcase='@{"随访医生都在这里"}'
                android:showcaseId='@{"patientMe"}'
                android:showcasePosition='@{1}'
                android:showcaseSize='@{3}'>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/iv_time_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_follow_up_doctor" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="随访医生"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal">

            <!--<LinearLayout-->
            <!--android:id="@+id/btn_recharge"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/ripple_default"-->
            <!--android:gravity="center"-->
            <!--android:onClick="@{handler.Recharge}"-->
            <!--android:orientation="vertical">-->

            <!--<FrameLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="@dimen/dp_40">-->

            <!--<ImageView-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_recharge" />-->
            <!--</FrameLayout>-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dp_14"-->
            <!--android:text="通话充值"-->
            <!--android:textColor="#363636"-->
            <!--android:textSize="@dimen/font_14" />-->

            <!--</LinearLayout>-->

            <!--<View-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#c1cacf" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{handler.coupon}"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_coupon" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="优惠券"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c1cacf" />

            <LinearLayout
                android:id="@+id/btn_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{handler.Setting}"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_setting" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="设置"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>


            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c1cacf" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include
            layout="@layout/include_footer"
            bind:footer="@{footer}" />

    </LinearLayout>
</layout>