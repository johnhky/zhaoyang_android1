<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.im.TextMsg" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.MessageAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15">

        <include
            layout="@layout/include_msg_time"
            app:adapter="@{adapter}"
            app:data="@{data}"
            app:vh="@{vh}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.doctor.sun.ui.widget.BezelImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_2"
                android:drawable="@{@drawable/default_avatar}"
                android:scaleType="centerCrop"
                android:src="@{adapter.yourAvatar}"
                app:maskDrawable="@drawable/circle_mask" />

            <LinearLayout
                android:layout_width="@dimen/dp_230"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:background="@drawable/nim_message_left_white_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:emoticon="@{data.body}"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="#363636"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/font_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="取消"
                        android:textSize="@dimen/font_13"
                        app:layout_widthPercent="50%" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="接受"
                        android:textSize="@dimen/font_13"
                        app:layout_widthPercent="50%" />

                </com.zhy.android.percent.support.PercentLinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>