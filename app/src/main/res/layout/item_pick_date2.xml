<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.vo.ItemPickDate" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:gravity="center"
            android:text="@{data.title}"
            android:textAppearance="@style/AppTheme.TextFloatLabelAppearance" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/ripple_default"
            android:onClick="@{()->data.pickTime(context)}">

            <TextView
                android:id="@+id/et_others"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:gravity="start|center_vertical"
                android:text="@{data.date}"
                android:textColor="@color/color_tick"
                android:textSize="@dimen/font_13" />
        </LinearLayout>
    </LinearLayout>
</layout>