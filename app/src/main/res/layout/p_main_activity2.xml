<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.ui.handler.patient.PMainHandler" />

        <variable
            name="patient"
            type="com.doctor.sun.dto.PatientDTO" />

        <variable
            name="footer"
            type="com.doctor.sun.ui.model.FooterViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_background_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_195"
                    android:background="@drawable/bg_main">

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="top|end"
                        android:layout_margin="@dimen/dp_14"
                        tools:src="@drawable/ic_launcher" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dp_165"
                            android:layout_height="@dimen/dp_165"
                            android:layout_gravity="center"
                            android:onClick="@{()->data.allDoctors(context)}"
                            app:backgroundCompat="@{data.searchDoctorBackground}"
                            tools:src="@drawable/search_doctor" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="找医生"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font_17"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_85"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:onClick="@{()->data.myOrder(context)}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:backgroundCompat="@{data.myOrderBackground}"
                                tools:src="@drawable/ic_my_order" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_6"
                                android:text="@string/title_my_order" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_gravity="top|end"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_marginRight="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_red_circle"
                            android:gravity="center"
                            android:text='@{"" + patient.myOrderNum}'
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12"
                            android:visibility="@{patient.myOrderNum > 0}"
                            tools:text="11" />
                    </FrameLayout>


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorPrimaryDark" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_default"
                        android:onClick="@{()->data.myDrug(context)}">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:backgroundCompat="@{data.drugOrderBackground}"
                                tools:src="@drawable/ic_drug_order" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_6"
                                android:text="@string/drug_order" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_gravity="top|end"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_marginRight="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/shape_red_circle"
                            android:gravity="center"
                            android:text='@{"" + patient.drugOrderNum}'
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12"
                            android:visibility="@{patient.drugOrderNum > 0}"
                            tools:text="11" />
                    </FrameLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorPrimaryDark" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_default"
                        android:onClick="@{()->data.askForService(context)}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:backgroundCompat="@{data.serviceBackground}"
                                tools:src="@drawable/ic_service" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_6"
                                android:text="@string/contact_us" />
                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_10">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新消息"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_unread_message_count"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_gravity="top|end"
                        android:layout_marginEnd="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:layout_marginStart="@dimen/dp_13"
                        android:background="@drawable/shape_red_circle"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone"
                        tools:text="11"
                        tools:visibility="visible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:onClick="@{()->data.allMyMessages(context)}"
                        android:text="查看更多"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="推荐医生"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recommend_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/white"
                    android:gravity="center"
                    android:onClick="@{()->data.allDoctors(context)}"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:text="查看所有医生"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <include
                android:id="@+id/include_footer"
                layout="@layout/include_footer"
                tools:footer="@{footer}" />
        </LinearLayout>

        <!--<include-->
        <!--android:id="@+id/include_footer"-->
        <!--layout="@layout/include_footer"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_gravity="bottom"-->
        <!--tools:footer="@[footer}" />-->
    </LinearLayout>
</layout>