<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_back"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_back_white"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_middle_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_done"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="完成"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:text="药名"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <EditText
                        android:id="@+id/et_drugName"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="#363636" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:text="用药天数"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"

                        >

                        <EditText
                            android:id="@+id/et_takeDays"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击修改用药天数"
                            android:textColor="@color/text_color_gray"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="天"
                        android:textColor="#363636" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></View>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>

                <LinearLayout
                    android:id="@+id/ll_titations"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:background="@color/gray_f5"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="需要动态调整剂量"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></View>

                    <TextView
                        android:id="@+id/tv_titration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="点击打开"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <CheckBox
                        android:id="@+id/chx_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="间隔"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <TextView
                        android:id="@+id/tv_frequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_1"
                        android:paddingLeft="30dp"
                        android:textColor="#363636"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
                <LinearLayout
                    android:id="@+id/ll_drugUnit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="单位"
                        android:textSize="14dp"
                        android:textColor="#363636" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_1"
                        android:paddingLeft="30dp"
                        android:textColor="#363636"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
                <LinearLayout
                    android:id="@+id/ll_noTitration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="早："
                        />
                    <EditText
                        android:id="@+id/et_morning"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_pencil_grey_15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_drug1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="(粒)"
                        android:layout_marginRight="14dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:background="#e6e6e6"
                        android:layout_height="match_parent"></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="午：    "
                        android:layout_marginLeft="14dp"
                        />
                    <EditText
                        android:id="@+id/et_noon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_pencil_grey_15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_drug2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="(粒)"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="晚："
                        />
                    <EditText
                        android:id="@+id/et_night"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_pencil_grey_15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_drug3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="(粒)"
                        android:layout_marginRight="14dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:background="#e6e6e6"
                        android:layout_height="match_parent"></View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="睡前："
                        android:layout_marginLeft="14dp"
                        />
                    <EditText
                        android:id="@+id/et_beforeSleep"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_pencil_grey_15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_drug4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#363636"
                        android:text="(粒)"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
            <LinearLayout
                android:id="@+id/ll_drug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="14dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="单位含量"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    >
                    <EditText
                        android:id="@+id/et_drug"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_pencil_grey_15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_drugUnit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_2"
                        android:textColor="#363636"
                        android:paddingLeft="30dp"
                        />
                </LinearLayout>
                <RadioButton
                    android:id="@+id/radio_1s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_address_mock"
                    android:textColor="#363636"
                    android:text="1s(不详)"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
                <LinearLayout
                    android:id="@+id/ll_titration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#363636"
                        android:text="用法用量"
                        android:layout_marginTop="10dp"
                        />
                        <ListView
                            android:id="@+id/listView"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></ListView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#e6e6e6"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_89"
                        android:text="备注信息"
                        android:textSize="14dp"
                        />
                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="start"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:hint="点击填写"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>