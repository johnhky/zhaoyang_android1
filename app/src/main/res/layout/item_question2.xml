<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Questions2" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.SortedListAdapter" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13">

                <ImageView
                    android:id="@+id/iv_position"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:enabled="@{data.refill == 1}"
                    android:selected="@{data.isSelected(adapter,vh)}"
                    android:src="@drawable/ic_position_selector" />


                <TextView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_23"
                    android:text='@{data.positionString()}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:text="@{data.baseQuestionContent}"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />


        </LinearLayout>

    </LinearLayout>
</layout>