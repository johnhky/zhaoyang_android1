<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.vo.ItemPickDate" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.ListAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <View
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="end"
                android:background="@drawable/shape_top_right_triangle"
                android:onClick="@{()->adapter.removeNotify(vh.getAdapterPosition)}" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="end"
                app:srcCompat="@drawable/ic_close_grey_12dp" />

            <TextView
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:background="@drawable/shape_blue_rect"
                android:gravity="center"
                android:text='@{"其它提醒 "+ data.position}'
                android:textColor="@color/white" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:text="提醒日期"
                android:textColor="@color/color_tick"
                android:textSize="@dimen/font_15" />


            <!--选择往后30天会有问题,不知道什么原因-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@drawable/ripple_default"
                android:onClick="@{()->data.pickFutureTime(context,0,60)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_week_default"
                    android:drawableRight="@drawable/ic_enter"
                    android:gravity="start|center_vertical"
                    android:minHeight="@dimen/dp_45"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_13"
                    android:text="@{data.date}"
                    android:textColor="@color/color_tick"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:text="提醒内容"
                android:textColor="@color/color_tick"
                android:textSize="@dimen/font_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@drawable/ripple_default">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/ic_week_default"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_13"
                    android:text="@={data.title}"
                    android:textColor="@color/color_tick"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/divider_color" />
    </LinearLayout>
</layout>