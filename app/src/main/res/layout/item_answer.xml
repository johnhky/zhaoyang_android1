<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Answer" />

        <variable
            name="position"
            type="java.lang.String" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{data.visible}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13">

                <ImageView
                    android:id="@+id/iv_position"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:enabled="@{data.needRefill == 1}"
                    android:selected="@{data.hasSelectedOptions}"
                    android:src="@drawable/ic_position_selector" />

                <TextView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_23"
                    android:text='@{""+data.position}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:text="@{data.question.questionContent}"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <FrameLayout
                android:id="@+id/fl_delete"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@drawable/shape_white_rect"
                android:clickable="true"
                android:onClick="@{data.handler.deleteAnswer(data,adapter,vh)}"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_default"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="删除问题"
                    android:textColor="@color/red_f0"
                    android:textSize="@dimen/font_12" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_reset"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@drawable/bg_mini_white"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_default"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="重填"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_12" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fl_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:animateLayoutChanges="true"
            android:orientation="vertical" />

        <include
            android:id="@+id/prescriptions"
            layout="@layout/item_add_prescription"
            bind:adapter="@{adapter}"
            bind:data="@{data}"
            bind:vh="@{vh}" />
    </LinearLayout>
</layout>