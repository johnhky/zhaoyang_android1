<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Answer" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_26"
        android:paddingRight="@dimen/dp_13"
        android:visibility="@{data.handler.canEditPills(data)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{data.handler.addDrug(adapter,vh)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_44"
            android:paddingTop="@dimen/dp_8"
            android:text="点击输入第1种历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.handler.drugCountGreaterThen(data,1)}' />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{data.handler.addDrug(adapter,vh)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:text="点击输入第2种历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.handler.drugCountGreaterThen(data,2)}' />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/ripple_default"
            android:drawableLeft="@drawable/ic_add_more"
            android:drawablePadding="@dimen/dp_10"
            android:onClick="@{data.handler.addDrug(adapter,vh)}"
            android:paddingLeft="@dimen/dp_10"
            android:text="添加更多用药"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/ripple_default"
            android:drawableLeft="@drawable/ic_load_prescription"
            android:drawablePadding="@dimen/dp_10"
            android:onClick="@{data.handler.loadDrug(adapter,vh)}"
            android:paddingLeft="@dimen/dp_10"
            android:text="导入医生上次用药"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_15"
            android:visibility="@{data.handler.loadDrugVisible(data)}" />
    </LinearLayout>
</layout>