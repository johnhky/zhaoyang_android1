<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

        <variable
            name="inputLayout"
            type="com.doctor.sun.vo.InputLayoutViewModel" />

        <variable
            name="isEditing"
            type="boolean" />

        <variable
            name="data"
            type="com.doctor.sun.entity.Appointment" />

    </data>


    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            app:header="@{header}" />

        <include
            layout="@layout/include_appointment_status"
            app:data="@{data}" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_eb"
                android:paddingBottom="@dimen/dp_13" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/input"
            layout="@layout/include_input_layout"
            bind:data="@{inputLayout}" />


        <include
            android:id="@+id/sticker"
            layout="@layout/include_sticker"
            bind:rootVisibility="@{inputLayout.keyboardType==1}" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/custom_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_226"
            android:layout_margin="@dimen/dp_15"
            android:overScrollMode="never"
            android:visibility="@{inputLayout.keyboardType==2}" />

    </LinearLayout>
</layout>