<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.doctor.sun.vm.ItemTextInput2" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.SortedListAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginStart="@dimen/dp_13"
        android:background="@drawable/ripple_default"
        android:clickable="@{data.clickable}"
        android:gravity="center_vertical"
        android:onClick="@{data.onClickListener}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:text="用药天数"
                android:textColor="@color/text_color_black"
                android:textAppearance="@style/AppTheme.TextFloatLabelAppearance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{data.result}"
                android:maxLength="3"
                android:textColor="@color/color_tick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13"
                android:text="天"
                android:textColor="@color/text_color_black"
                android:textAppearance="@style/AppTheme.TextFloatLabelAppearance" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="点击修改用药天数"
            android:layout_marginLeft="@dimen/dp_50"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/font_8"
            android:visibility="@{data.clickable}" />
    </LinearLayout>

</layout>