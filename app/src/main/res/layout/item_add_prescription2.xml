<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.vo.ItemAddPrescription" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:adapter="@{data.getAdapter(context)}"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{data.addDrug(adapter,vh)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_44"
            android:paddingTop="@dimen/dp_8"
            android:text="1. 点击填写历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.sizeLessThen(1)}' />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{data.addDrug(adapter,vh)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:text="2. 点击填写历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.sizeLessThen(2)}' />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/ripple_default"
            android:drawableLeft="@drawable/ic_add_more"
            android:drawablePadding="@dimen/dp_10"
            android:onClick="@{data.addDrug(adapter,vh)}"
            android:paddingLeft="@dimen/dp_10"
            android:text="添加更多用药"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15" />

    </LinearLayout>
</layout>