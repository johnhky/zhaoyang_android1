<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.doctor.sun.vo.ItemAddPrescription2" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.SortedListAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{()->data.addDrug(context,adapter)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_44"
            android:paddingTop="@dimen/dp_8"
            android:text="1. 点击填写历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.sizeLessThen(1,adapter)}' />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_74"
            android:background="@drawable/ripple_prescription"
            android:onClick="@{()->data.addDrug(context,adapter)}"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:text="2. 点击填写历史服药情况"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility='@{data.sizeLessThen(2,adapter)}' />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/ripple_default"
            android:drawableLeft="@drawable/ic_add_more"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_add_more"
            android:onClick="@{()->data.addDrug(context,adapter)}"
            android:paddingLeft="@dimen/dp_10"
            android:text="添加更多用药"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@drawable/ripple_default"
            android:drawableLeft="@drawable/ic_load_prescription"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_load_prescription"
            android:paddingLeft="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:text="导入医生上次用药"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_15" />

    </LinearLayout>
</layout>