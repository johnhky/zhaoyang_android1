<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Doctor" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.SimpleAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:onClick="@{()->data.handler.detail(context, ivAvatar)}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_128"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{()->data.handler.select(adapter, vh)}"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_15"
                android:selected="@{data.handler.isSelected(adapter, vh)}"
                android:src="@drawable/ic_circle_tick"
                android:visibility="@{data.handler.isVisible(adapter)}" />

            <com.doctor.sun.ui.widget.BezelImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_11"
                android:drawable="@{@drawable/default_avatar}"
                android:scaleType="centerCrop"
                android:src="@{data.avatar}"
                app:maskDrawable="@drawable/circle_mask"
                app:transitionName='@{"doctor" + data.id}' />

            <LinearLayout
                android:layout_width="@dimen/dp_272"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_11">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.name}"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RatingBar
                        style="@style/SmallRatingBarCenter"
                        android:layout_marginRight="@dimen/dp_15"
                        android:numStars="5"
                        android:rating="@{data.point}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@{data.levelBackgroundColor}"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:singleLine="true"
                    android:text="@{data.level}"
                    android:textColor="@color/blue_grey"
                    android:textSize="@dimen/font_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:singleLine="true"
                    android:text="@{data.handler.getCareerInfo}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:text="@{&quot;专属网诊:  ￥&quot;+data.money + &quot;   闲时咨询:  ￥&quot;+data.secondMoney}"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_13"
                    tools:text="诊金" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@{data.handler.getSpecial}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

    </LinearLayout>
</layout>