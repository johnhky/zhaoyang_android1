<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="handler"
            type="com.doctor.sun.entity.handler.PrescriptionHandler" />

        <variable
            name="data"
            type="com.doctor.sun.immutables.Prescription" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:onClick="@{handler.viewDetail(data)}"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:paddingTop="@dimen/dp_10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{handler.getName(data)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{handler.getIntervalWithLabel(data)}" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{handler.getAmountKV(data)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{handler.getRemarkLabel(data)}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/divider_color" />
    </LinearLayout>
</layout>