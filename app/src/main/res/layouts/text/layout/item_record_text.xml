<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.doctor.sun.vm.ItemRadioDialog" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.SortedListAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginStart="@dimen/dp_13"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textColorHint="#9bb6c5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_4"
                android:text="@{data.title}"
                tools:text="您与患者的关系"
                android:textAppearance="@style/AppTheme.TextFloatLabelAppearance" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.error}"
                tools:text="必填"
                android:textAppearance="@style/AppTheme.TextErrorAppearance"
                android:visibility="@{data.errorVisible(data.error)}" />
        </LinearLayout>
        <TextView
            android:id="@+id/et_input"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:onClick="@{(thisview)->data.showPopupWindow(thisview,context)}"
            android:text="@{data.selectedItemText}"
            android:textColorHint="@color/gray_d9"
            android:textSize="@dimen/font_13"
            tools:text="本人"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_arrows"
            />
    </LinearLayout>
</layout>