<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Description" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@{data.getBackgroundColor()}"
        android:gravity="center_vertical"
        tools:showIn="@layout/activity_time">

        <TextView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="@{data.subContent ?? String.valueOf(' ')}"
            android:textColor="@{data.getTitleColor(context)}"
            android:textSize="@dimen/font_10"
            app:visible="@{data.enabled}"
            tools:text="å…ƒ" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{data.content ?? String.valueOf(' ')}"
            android:textColor="@{data.getTitleColor(context)}"
            android:textSize="@dimen/font_15"
            app:visible="@{data.enabled}"
            tools:text="1000.00" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{data.title ?? String.valueOf(' ')}"
            android:textColor="@{data.getTitleColor(context)}"
            android:textSize="@dimen/font_15"
            app:visible="@{data.enabled}"
            tools:text="content" />

    </FrameLayout>
</layout>