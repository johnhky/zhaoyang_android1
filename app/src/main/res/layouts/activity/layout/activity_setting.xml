<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.doctor.sun.Settings" />

        <variable
            name="handler"
            type="com.doctor.sun.ui.handler.SettingHandler" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/push_switch"
                    layout="@layout/item_switch"
                    bind:data="@{handler.pushSwitch}" />

                <LinearLayout
                    android:id="@+id/lly_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{handler.changePassword}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="修改密码"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{()->handler.allowToSearch(context)}"
                    android:visibility="@{Settings.isDoctor()}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:maxLines="1"
                        android:text="公开检索权限"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color"
                    android:visibility="@{Settings.isDoctor()}" />

                <LinearLayout
                    android:id="@+id/lly_advice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{handler.giveAdvice}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="建议反馈"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/lly_help"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{handler.help}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="帮助教程"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/lly_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{()->handler.share(context)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="分享给朋友"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/lly_cache"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="清理缓存"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/lly_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical"
                    android:onClick="@{handler.checkUpdate}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text="检测更新"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />


                <LinearLayout
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/ripple_default"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:singleLine="true"
                        android:text='@{"版本号 :" +handler.appVersion()}'
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <FrameLayout
                    android:layout_width="@dimen/dp_282"
                    android:layout_height="@dimen/dp_49"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_35"
                    android:background="@drawable/bg_red"
                    android:onClick="@{handler.logOut}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="退出登录"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_17" />

                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>