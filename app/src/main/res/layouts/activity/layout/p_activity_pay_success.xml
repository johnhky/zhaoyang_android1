<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_drugOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88cb5a"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_32"
                    android:background="@drawable/ic_pay_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="支付成功"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_20" />

                <TextView
                    android:id="@+id/tv_system_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text="@string/pay_success_tip"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_13"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_marginRight="@dimen/dp_39"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="#363636"
                android:textSize="@dimen/dp_15" />

            <FrameLayout
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_49"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_26"
                android:background="@drawable/shape_button">

                <TextView
                    android:id="@+id/tv_sub_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="立即填写就诊前问卷"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_17" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_49"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/shape_blue_rect_stroke">

                <TextView
                    android:id="@+id/tv_main_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="返回咨询订单列表"
                    android:textColor="#339de1"
                    android:textSize="@dimen/font_17" />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_appointment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="visible"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88cb5a"
                >
                <TextView
                    android:id="@+id/tv_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_pay_success"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="已成功预约"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_success"
                    android:layout_alignTop="@+id/tv_success"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一步:填写诊前问卷"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_success"
                    android:layout_alignBottom="@+id/tv_success"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_record_selector_selected"
                        />
                    <View
                        android:layout_width="3dp"
                        android:background="@color/green"
                        android:layout_height="45dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_blue_point"
                        />
                    <View
                        android:layout_width="3dp"
                        android:background="@color/gray_bb"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_record_selector_disable"
                        />
                    <View
                        android:layout_width="3dp"
                        android:background="@color/gray_bb"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_record_selector_disable"
                        />
                    <View
                        android:layout_width="3dp"
                        android:background="@color/gray_bb"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_record_selector_disable"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="6dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="预约成功"
                        android:textColor="@color/green"
                        />
                    <TextView
                        android:id="@+id/tv_appointmentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="填写诊前问卷"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/text_color_black"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27dp"
                        android:text="医生开处方"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="取药配送"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#e6e6e6"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:textColor="@color/main_txt_color"
                    android:background="@drawable/shape_blue_rect_stroke"
                    android:text="返回咨询订单列表"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:id="@+id/btn_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="填写诊前问卷"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_button"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e6e6e6"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/white"
                >
            <LinearLayout
                android:id="@+id/ll_askService"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_services" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:text="@string/ask_service"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>