<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.doctor.sun.R" />

        <variable
            name="handler"
            type="com.doctor.sun.entity.handler.TimeHandler" />


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/include_header" />

            <LinearLayout
                android:id="@+id/ll_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e6e6"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="专属网诊"
                    android:textColor="@color/main_txt_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/rv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e6e6"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="诊所面诊"
                    android:textColor="@color/main_txt_color"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_txt_color"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14dp"/>
            </LinearLayout>

            <ListView
                android:id="@+id/rv_surfaceTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:background="#e6e6e6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_simple"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="简易复诊(关闭)"
                        android:gravity="center_vertical"
                        android:textColor="@color/main_txt_color"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/btn_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="简易复诊:患者预约后立即开始,请在24小时内完成诊断填写"
                    android:textColor="@color/main_txt_color"
                    android:textSize="14dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></View>
            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:background="#eff3f5"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/dp_283"
                    android:layout_height="@dimen/dp_49"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/btn_time_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:maxLines="1"
                        android:onClick="@{handler.addTime}"
                        android:text="添加出诊时间"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_17" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/empty_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:maxLines="1"
            android:textColor="@color/grey_ab"
            android:textSize="@dimen/font_15"
            android:visibility="gone"
            bind:drawableTop="@{R.drawable.vector_grey_launcher}" />
    </FrameLayout>
</layout>
