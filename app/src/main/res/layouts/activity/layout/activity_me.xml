<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Doctor" />

        <variable
            name="footer"
            type="com.doctor.sun.ui.model.FooterViewModel" />


        <variable
            name="handler"
            type="com.doctor.sun.ui.handler.MeHandler" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_header2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/bg_me"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.doctor.sun.ui.widget.BezelImageView
                    android:id="@+id/iv_me"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:current="@{0}"
                    android:next="@{1}"
                    android:onClick="@{handler.head}"
                    android:previous='@{-1}'
                    android:scaleType="centerCrop"
                    android:showcase='@{"点击头像可以修改个人信息"}'
                    android:src="@{data.avatar}"
                    app:maskDrawable="@drawable/circle_mask" />

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_me"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@{data.levelBackgroundColor}"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey"
                    android:textSize="@dimen/font_9" />

            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击头像编辑个人资料"
                android:drawableRight="@drawable/pencil"
                android:textColor="#4a8fef"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
              
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="@{()->handler.viewFeedback(context)}">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@{data.name}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15" />

                <RatingBar
                    style="@style/SmallRatingBar"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_name"
                    android:isIndicator="true"
                    android:rating="@{data.point}" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_hosptial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{data.hospitalName}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_hosptial"
                    android:paddingLeft="@dimen/dp_29"
                    android:singleLine="true"
                    android:text="@{@string/string_of_two(data.specialist,data.title)}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:current="@{1}"
                        android:isRect="@{true}"
                        android:next="@{-1}"
                        android:orientation="horizontal"
                        android:previous='@{0}'
                        android:showcase='@{"医生可以自定义自己的设置"}'>

                        <LinearLayout
                            android:id="@+id/btn_time_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{handler.Time}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_time_setting" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="出诊时间"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c1cacf" />

                        <LinearLayout
                            android:id="@+id/btn_price_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{handler.Price}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_price_setting" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="诊金设置"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c1cacf" />

                        <LinearLayout
                            android:id="@+id/btn_template_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{handler.Template}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_template_setting" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="问诊模板"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{handler.myQrCode}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_qrcode" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:text="我的二维码"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c1cacf" />

                        <LinearLayout
                            android:id="@+id/btn_disturb_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{()->handler.recordPool(context)}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_record_pool" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="病历库"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c1cacf" />

                        <LinearLayout
                            android:id="@+id/btn_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:onClick="@{handler.Setting}"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_setting" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:text="设置"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_14" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:orientation="horizontal">


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_gravity="bottom"
                                android:background="#c1cacf" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_default"
                                android:gravity="center"
                                android:onClick="@{()->handler.doctorIncome(context)}"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_40">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/my_income" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:text="我的账单"
                                    android:textColor="#363636"
                                    android:textSize="@dimen/font_14" />

                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#c1cacf" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120" />

                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/tv_review_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_49"
                android:background="@color/dark_36"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_23"
                android:paddingRight="@dimen/dp_23"
                android:text="资料正在审核，请耐心等待"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <include
                    layout="@layout/include_footer"
                    bind:footer="@{footer}" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</layout>