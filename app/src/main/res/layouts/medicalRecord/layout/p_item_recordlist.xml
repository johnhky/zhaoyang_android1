<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.MedicalRecord" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseListAdapter" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_default"
            android:onClick="@{()->data.handler.updateRecord(context)}"
            android:paddingLeft="@dimen/dp_13"
            android:paddingStart="@dimen/dp_13"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{data.recordName}"
                android:textColor="#363636"
                android:textSize="@dimen/font_16"
                tools:text="name" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_toEndOf="@id/tv_name"
                android:layout_toRightOf="@id/tv_name"
                android:text="@{data.handler.getGenderResult}"
                android:textColor="#363636"
                android:textSize="@dimen/font_14"
                tools:text="男" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@{data.birthday}"
                tools:text="1992年13月32日"
                android:textColor="#363636"
                android:textSize="@dimen/font_14" />

            <!--<TextView-->
            <!--android:id="@+id/tv_locate"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tv_birthday"-->
            <!--android:layout_marginTop="@dimen/dp_4"-->
            <!--android:text="@{data.handler.getCareerInfo}"-->
            <!--android:textColor="#363636"-->
            <!--android:textSize="@dimen/font_14" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@drawable/ic_enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

    </LinearLayout>
</layout>