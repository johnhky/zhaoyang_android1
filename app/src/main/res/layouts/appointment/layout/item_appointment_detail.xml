<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="handler"
            type="com.doctor.sun.entity.handler.AppointmentHandler2" />

        <variable
            name="data"
            type="com.doctor.sun.vo.AppointmentWrapper" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseListAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{handler.getTime(context,data.data)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            tools:text="预约时间:2012年9月12日 20:20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{@string/appointment_type(data.displayType)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            tools:text="预约类型:专属就诊" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{@string/should_pay(data.getNeedPay(context))}"
            tools:text="应付:100元" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{data.tagsSelectedStatus()}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="@{data.tagsLabel()}"
            android:textColor="@color/grey_42"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</layout>