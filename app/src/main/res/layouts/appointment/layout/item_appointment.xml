<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.doctor.sun.entity.handler.AppointmentHandler2" />

        <variable
            name="data"
            type="com.doctor.sun.immutables.Appointment" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseListAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.medical_record.patientName,default = 患者名}"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:text="@{data.medical_record.relation, default = 关系}"
                android:textColor="#898989"
                android:textSize="@dimen/font_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:textColor="#898989"
                android:textSize="@dimen/font_13"
                app:html="@{AppointmentHandler2.styledOrderStatus(data)}" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{@string/appointment_time(data.book_time),default = 预约时间}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{@string/appointment_type(data.display_type),default = 专属咨询}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{@string/appointment_progress(data.progress),default = 问卷完成度 }"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前病历: "
                android:textColor="#363636"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.medical_record.patientName}"
                android:textColor="#363636"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@{data.medical_record.relation}"
                android:textColor="#898989"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px">


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c1cacf"
                android:paddingLeft="@dimen/dp_13" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lly_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="horizontal">
            <!--android:visibility="@{data.handler.isPayed()}">-->

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/fl_cancel"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@drawable/shape_white_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="取消预约"
                    android:textColor="#339de1"
                    android:textSize="@dimen/font_13" />
                <!--android:onClick="@{()->data.handler.cancel2(adapter,vh,data)}"-->
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_remind"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:background="@drawable/shape_blue_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="提  醒"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_13" />
                <!--android:onClick="@{()->data.handler.remind(context,data.id,data.medicalRecord.patientId)}"-->
            </FrameLayout>

        </LinearLayout>

        <!--<FrameLayout-->
        <!--android:layout_width="@dimen/dp_90"-->
        <!--android:layout_height="@dimen/dp_35"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginBottom="@dimen/dp_8"-->
        <!--android:layout_marginEnd="@dimen/dp_13"-->
        <!--android:layout_marginRight="@dimen/dp_13"-->
        <!--android:layout_marginTop="@dimen/dp_7"-->
        <!--android:background="@drawable/btn_comment"-->
        <!--android:visibility="@{data.handler.showCommentBtn}"-->
        <!--app:selected="@{data.handler.hasPatientComment}">-->

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/ripple_default"-->
        <!--android:gravity="center"-->
        <!--android:onClick="@{()->data.handler.comment(adapter,vh)}"-->
        <!--android:text='@{data.handler.hasPatientComment?"已评价":"评  价"}'-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="@dimen/font_13" />-->

        <!--</FrameLayout>-->

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:background="#ebf0f3"
            app:visible="@{data.has_pay==1}" />
    </LinearLayout>
</layout>