<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Appointment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:clickable="true"
        android:onClick="@{()->data.handler.historyList(context,data)}"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <include
            layout="@layout/item_doctor"
            app:data="@{data.doctor}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:gravity="left|center_vertical"
            android:text="@{@string/appointment_time(data.bookTime)}"
            android:textColor="#282828"
            android:textSize="@dimen/font_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:gravity="left|center_vertical"
            android:text="@{@string/appointment_type(data.displayType)}"
            android:textColor="#282828"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:gravity="left|center_vertical"
            android:textColor="#282828"
            android:textSize="@dimen/font_14"
            app:html="@{@string/money(data.money)}" />
    </LinearLayout>
</layout>