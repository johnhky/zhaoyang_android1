<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Appointment" />

        <variable
            name="vh"
            type="com.doctor.sun.ui.adapter.ViewHolder.BaseViewHolder" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.core.BaseListAdapter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:onClick="@{()->data.handler.onPatientClickOrder(adapter,vh)}"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13">

            <com.doctor.sun.ui.widget.BezelImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:drawable="@{@drawable/default_avatar}"
                android:scaleType="centerCrop"
                android:src="@{data.doctor.avatar}"
                app:maskDrawable="@drawable/circle_mask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="@{data.doctor.name}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@drawable/shape_red_rect"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:singleLine="true"
                    android:text="@{data.doctor.level}"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@{data.handler.getStatusBackground()}"
                android:gravity="center_vertical"
                android:onClick="@{()->data.handler.showStatusTimeline(context)}"
                android:paddingLeft="@dimen/dp_13"
                android:paddingStart="@dimen/dp_13"
                android:textSize="@dimen/font_13"
                app:drawableRightCompat="@{data.handler.getStatusArrow()}"
                app:html="@{data.handler.styledOrderStatus2}"
                tools:ignore="RtlSymmetry" />

        </com.zhy.android.percent.support.PercentFrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_13"
            android:background="#c1cacf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病历: "
                android:textColor="#363636"
                android:textSize="@dimen/font_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.handler.recordName}"
                android:textColor="#363636"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@{@string/appointment_time(data.handler.bookTime)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/appointment_type(data.displayType)}"
                android:textColor="#363636"
                android:textSize="@dimen/font_13"
                app:layout_widthPercent="40%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_widthPercent="60%">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问卷完成度 : "
                    android:textColor="@color/dark_36"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingStart="@dimen/dp_6"
                    android:text="@{data.progress}"
                    android:textColor="@color/dark_36"
                    android:textSize="@dimen/font_13"
                    tools:text="1/20" />

            </LinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#363636"
                android:textSize="@dimen/font_13"
                app:html="@{@string/money(data.money)}"
                app:layout_widthPercent="40%" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility='@{data.handler.isCouponUsed()}'
                app:layout_widthPercent="60%">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13"
                    app:html="@{@string/need_pay(data.needPay)}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" (已使用优惠券)"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px">


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_13"
                android:background="#c1cacf" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lly_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="horizontal"
            app:visible="@{data.handler.payVisible}">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/fl_cancel"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@drawable/shape_white_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:onClick="@{()->data.handler.pCancel(adapter,vh,data.id)}"
                    android:text="取消预约"
                    android:textColor="#339de1"
                    android:textSize="@dimen/font_13" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_remind"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="end"
                android:background="@drawable/shape_blue_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:onClick="@{()->data.handler.startPayActivity(context,data.id)}"
                    android:text="立即支付"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_13" />
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_comment"
            android:visibility="@{data.handler.showCommentBtn()}"
            app:selected="@{data.handler.hasDoctorComment}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{()->data.handler.pComment(adapter,vh)}"
                android:text='@{data.handler.hasDoctorComment()?"已评价":"评  价"}'
                android:textColor="#fff"
                android:textSize="@dimen/font_13"
                tools:text="评  价" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_comment"
            android:visibility="@{data.handler.showAnswerQuestionBtn}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:onClick="@{()->data.handler.onPatientClickOrder(adapter,vh)}"
                android:text="填写问卷"
                android:textColor="#fff"
                android:textSize="@dimen/font_13"
                tools:text="填写问卷" />

        </FrameLayout>

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:background="#ebf0f3" />
    </LinearLayout>
</layout>